{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/wxw-matt/devcontainer-features/apt:latest": {
			      "packages": "build-essential binutils-arm-none-eabi git libpng-dev"
        },
        "ghcr.io/wxw-matt/devcontainer-features/script_runner:latest": {
		"script1" : "install-devkitpro-pacman#https://apt.devkitpro.org/install-devkitpro-pacman"
        },
	"ghcr.io/wxw-matt/devcontainer-features/command_runner:latest": {
		"command1" : "sudo dkp-pacman -Sy",
		"command2" : "sudo dkp-pacman -S gba-dev",
		"command3" : "source /etc/profile.d/devkit-env.sh"
	}
    }
}
